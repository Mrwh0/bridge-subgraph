{
  "name": "@polischain/bridge-subgraph",
  "version": "1.0.0",
  "dependencies": {
    "@graphprotocol/graph-cli": "0.21.1",
    "@graphprotocol/graph-ts": "0.20.1"
  },
  "license": "MIT",
  "scripts": {
    "auth": "graph auth https://api.thegraph.com/deploy/ $GRAPH_ACCESS_TOKEN",
    "codegen": "graph codegen --output-dir src/types/",
    "build": "graph build",
    "prepare-polis-bsc": "mustache config/polis-bsc.json subgraph.template.yaml > subgraph.yaml",
    "prepare-bsc-polis": "mustache config/bsc-polis.json subgraph.template.yaml > subgraph.yaml",
    "deploy-polis-bsc": "graph deploy polischain/polis-to-bsc-omnibridge --ipfs https://api.thegraph.com/ipfs/ --node https://api.thegraph.com/deploy/",
    "deploy-bsc-polis": "graph deploy polischain/bsc-to-polis-omnibridge --ipfs https://api.thegraph.com/ipfs/ --node https://api.thegraph.com/deploy/"
  },
  "devDependencies": {
    "mustache": "4.2.0",
    "prettier": "2.5.0"
  }
}
