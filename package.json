{
  "name": "@polischain/bridge-subgraph",
  "version": "1.0.0",
  "dependencies": {
    "@graphprotocol/graph-cli": "0.21.1",
    "@graphprotocol/graph-ts": "0.20.1"
  },
  "license": "MIT",
  "scripts": {
    "auth": "graph auth https://api.thegraph.com/deploy/ $GRAPH_ACCESS_TOKEN",
    "codegen": "graph codegen --output-dir src/types/",
    "build": "graph build",
    "prepare-matic-polis": "mustache config/matic-polis.json subgraph.template.yaml > subgraph.yaml",
    "deploy-matic-polis": "graph create --node $NODE_URL polischain/polygon-to-polis-bridge && graph deploy polischain/polygon-to-polis-bridge --ipfs $IPFS_URL --node $NODE_URL ",
    "prepare-avalanche-polis": "mustache config/avalanche-polis.json subgraph.template.yaml > subgraph.yaml",
    "deploy-avalanche-polis": "graph create --node $NODE_URL polischain/avalanche-to-polis-bridge && graph deploy polischain/avalanche-to-polis-bridge --ipfs $IPFS_URL --node $NODE_URL",
    "prepare-bsc-polis": "mustache config/bsc-polis.json subgraph.template.yaml > subgraph.yaml",
    "deploy-bsc-polis": "graph create --node $NODE_URL polischain/bsc-to-polis-bridge && graph deploy polischain/bsc-to-polis-bridge --ipfs $IPFS_URL --node $NODE_URL",
    "prepare-fantom-polis": "mustache config/fantom-polis.json subgraph.template.yaml > subgraph.yaml",
    "deploy-fantom-polis": "graph create --node $NODE_URL polischain/fantom-to-polis-bridge && graph deploy polischain/fantom-to-polis-bridge --ipfs $IPFS_URL --node $NODE_URL",
    "prepare-polis-matic": "mustache config/polis-matic.json subgraph.template.yaml > subgraph.yaml",
    "deploy-polis-matic": "graph deploy polischain/polis-to-polygon-bridge --ipfs https://api.thegraph.com/ipfs/ --node https://api.thegraph.com/deploy/",
    "prepare-polis-fantom": "mustache config/polis-fantom.json subgraph.template.yaml > subgraph.yaml",
    "deploy-polis-fantom": "graph deploy polischain/polis-to-fantom-bridge --ipfs https://api.thegraph.com/ipfs/ --node https://api.thegraph.com/deploy/",
    "prepare-polis-bsc": "mustache config/polis-bsc.json subgraph.template.yaml > subgraph.yaml",
    "deploy-polis-bsc": "graph deploy polischain/polis-to-bsc-bridge --ipfs https://api.thegraph.com/ipfs/ --node https://api.thegraph.com/deploy/",
    "prepare-polis-avalanche": "mustache config/polis-avalanche.json subgraph.template.yaml > subgraph.yaml",
    "deploy-polis-avalanche": "graph deploy polischain/polis-to-avalanche-bridge --ipfs https://api.thegraph.com/ipfs/ --node https://api.thegraph.com/deploy/"
  },
  "devDependencies": {
    "mustache": "4.2.0",
    "prettier": "2.5.0"
  }
}
